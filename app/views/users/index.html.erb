<div class= "center">
<h1>Listing all the users</h1>
<div class="row">
  
    <div class= "well col-md-4 col-md-offset-4">
      <% @users.each do|user|%>
      <ul class= "listing">
        <li>
        <%=link_to gravatar_for(user), user_path(user)%>
        </li>
        
       <li>
         <%=link_to user.username,user_path(user)%>
       </li> 
        <small>
          <%= pluralize(user.articles.count,'article')%>
        </small>
        
        
      </ul>
        <%end%>      
    </div>
    
    
  </div>
</div>