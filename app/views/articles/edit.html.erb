<h1> Please Edit your article here</h1>

<% if @article.errors.any? %>
<h2> The following errors are the reason for not getting updated</h2>
  <ul>
    <% @article.errors.full_messages.each do|msg| %>
    <li><%=msg%></li>
  </ul>

<%end%>
<% end%>
</br>
  <%= form_for @article do |f|%>
    <p>
      <%= f.label :title %>
          </br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description %>
            </br>
      <%= f.text_area :description %>
    </p>
  <%= f.submit %>

<% end %>